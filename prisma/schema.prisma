generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int       @id @default(autoincrement())
  role          Role      @default(USER)
  nickname      String    @unique
  description   String?
  profileUrlKey String?
  createdAt     DateTime  @default(now()) @db.Timestamp(6)
  updatedAt     DateTime  @default(now()) @updatedAt @db.Timestamp(6)
  deletedAt     DateTime? @db.Timestamp(6)

  authentication Authentication?
  // toiletReviews      ToiletReviews[]
  // toiletReviewEmoji ToiletReviewEmoji[]
  // reportedReports    Reports[]           @relation("ReportedUser")
  // targetReports      Reports[]           @relation("TargetUser")
}

model Authentication {
  id        Int       @id @default(autoincrement())
  userId    Int?      @unique
  email     String
  provider  Provider
  password  String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt @db.Timestamp(6)
  deletedAt DateTime? @db.Timestamp(6)

  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([email, provider])
}

model Place {
  id              Int           @id @default(autoincrement())
  kakaoId         String  @unique
  name            String
  placeCategoryId Int
  regionId        Int
  detailAddress   String
  telephone       String?
  stars           String?
  kakaoUrl        String?
  x               Float
  y               Float

  region          Region?      @relation(fields: [regionId], references: [id])
  placeCategory   PlaceCategory @relation(fields: [placeCategoryId], references: [id])
}

model PlaceCategory {
  id           Int  @id @default(autoincrement())
  lastDepth    Int
  depth1Id   Int
  depth2Id   Int?
  depth3Id Int?
  depth4Id  Int?
  depth5Id  Int?

  place      Place[]
  oneDepth   Category  @relation("OneDepth", fields: [depth1Id ], references: [id])
  twoDepth   Category? @relation("TwoDepth", fields: [depth2Id], references: [id])
  threeDepth Category? @relation("ThreeDepth", fields: [depth3Id], references: [id])
  fourDepth  Category? @relation("FourDepth", fields: [depth4Id], references: [id])
  fiveDepth  Category? @relation("FiveDepth", fields: [depth5Id], references: [id])
}

model Category {
  id   Int    @id @default(autoincrement())
  name String @unique

  oneDepth   PlaceCategory[] @relation("OneDepth")
  twoDepth   PlaceCategory[] @relation("TwoDepth")
  threeDepth PlaceCategory[] @relation("ThreeDepth")
  fourDepth  PlaceCategory[] @relation("FourDepth")
  fiveDepth  PlaceCategory[] @relation("FiveDepth")
}

model Region {
  id                     Int     @id @default(autoincrement())
  administrativeDistrict String
  district               String?
  place                  Place[]

  @@unique([administrativeDistrict, district])
}

